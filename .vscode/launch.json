    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "protocol": "legacy",
            "request": "launch",
            "name": "test - extension installer",
            "program": "${workspaceRoot}/src/extension/node_modules/mocha/bin/_mocha",
            "cwd": "${workspaceRoot}/src/extension",
            "args": [
                "dist/test"
                "--timeout=1200000"
            ],
            "outFiles": [
                "${workspaceRoot}/src/extension/**/*.js"
            ],
            "showAsyncStacks": true
        }
    ]
}